# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Crawler Configuration
SEARCH_KEYWORD=당근마켓
CRAWL_INTERVAL=3600  # seconds (1 hour)

# Naver OpenAPI Configuration (for MCP-based crawling)
# Get your credentials from: https://developers.naver.com/
X_NAVER_CLIENT_ID=your_naver_client_id_here
X_NAVER_CLIENT_SECRET=your_naver_client_secret_here

# Scheduler Configuration
CRAWL_SCHEDULE=0 9 * * *  # Daily at 9 AM

# Application Configuration
LOG_LEVEL=INFO
MAX_ARTICLES=50
START_DATE=  # Optional: YYYY-MM-DD format for date range filtering
END_DATE=  # Optional: YYYY-MM-DD format for date range filtering
MAX_PAGES=3  # Number of pages to crawl (10 articles per page)
SORT_ORDER=date  # 'date' or 'sim' (similarity/relevance)

# Security Note:
# 1. Copy this file to .env
# 2. Replace 'your_secure_password_here' with your actual database password
# 3. Never commit .env file to git
